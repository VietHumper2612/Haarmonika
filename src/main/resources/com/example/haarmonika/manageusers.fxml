<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.haarmonika.Controllers.ManageCustomersController">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Manage Customers" />
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="phoneField" promptText="Phone" />
            <Button text="Add Customer" onAction="#handleAddCustomer" />
            <Button text="Delete Customer" onAction="#handleDeleteCustomer" />
            <Button text="Update Customer" onAction="#handleUpdateCustomer" />
        </VBox>
    </children>
    <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
    <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
    <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
    <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
</AnchorPane>