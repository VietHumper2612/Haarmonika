<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.haarmonika.Controllers.AdminController">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Admin Dashboard" />
            <Button text="Manage Users" onAction="#handleManageUsers"/>
            <Button text="View Reports" onAction="#handleViewReports"/>
            <Button text="Settings" onAction="#handleSettings"/>
        </VBox>
    </children>
    <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
    <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
    <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
    <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
</AnchorPane>