<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.haarmonika.Controllers.ViewReportsController">
    <children>
        <VBox alignment="CENTER" spacing="10">
            <Label text="View Reports" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TableView fx:id="reportsTable">
                <columns>
                    <TableColumn text="Report ID" fx:id="colReportId"/>
                    <TableColumn text="Description" fx:id="colDescription"/>
                    <TableColumn text="Date" fx:id="colDate"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
